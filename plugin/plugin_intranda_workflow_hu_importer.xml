<config_plugin>
	
	<!-- 	import set for excel files
		name: name of the export set, which will be displayed in the dropdonwnmenu
		metadataFolder: where are the documents located
		mediaFolder: where are the media files located
		workflow: the workflow that shall be used
		project: the goobi project that shall be used
		mappingSet: the mapping that shall be used by the import set
		publicationType: the publicationType that shall be used i.e. Monograph,...
        -->
        
	<importSet name="TestImportSet" 
		metadataFolder="/opt/digiverso/import/sample/" 
		mediaFolder ="/opt/digiverso/import/images/" 
		workflow="Sample_Workflow"
		project="Archive_Project" 
		mappingSet="Monograph" 
		publicationType="Monograph"
		structureType="Chapter"
		importSetDescription="/opt/digiverso/import/description/description.xlsx"
		descriptionMappingSet="Description"
		/>
	
	<mappingSet name="Monograph">
		<field column="D" label="Inventar-Nr./Signatur" type="metadata" mets="TitleDocMainShort"/>
		<field column="M,N" label="Datei recto" type="metadata" mets="TitleDocMainShort"/>
		<field column="M,N" label="Datei recto" type="media"/>
		<field column="J" label="MaÃŸe" type="metadata" mets="TitleDocMainShort"/>
		<field column="O" label="Author" type="person" mets="Author"/>
	</mappingSet>
	
	<mappingSet name="Description">
		<field column="A" label="Dateiname" type="FileName" />
		<field column="B" label="Titel" type="metadata" mets="TitleDocMain"/>
		<field column="C" label="Autor" type="person" mets="Author"/>
	</mappingSet>
	
</config_plugin>
